  	<thead>
		<tr>
			<th>VehicleName</th>
			<th>RegistrationNumber</th>
			<th>Actions </th>
			
		</tr>
	</thead>
		<tbody>
			<tr>
				<% for vehicle in @vehicles %>
					<td><%= vehicle.name %></td>
					<td><%= vehicle.reg_no %></td>	
					<td><%= link_to "Show",vehicle_path(vehicle.id) %> |
