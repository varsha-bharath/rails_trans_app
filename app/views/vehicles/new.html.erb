<h3>Vehicles</h3>

<%= form_for @vehicle , html: { multipart: true } do |t| %>
	<% if @vehicle.errors.any? %>
		<h3>These errors prohibited this <%= @vehicle.class %> from being saved</h3>
		<ul>
		<% for msg in @vehicle.errors.full_messages %>
			<li><%= msg %></li>
			<% end -%>
		</ul>
	<% end -%>

	<label>Name: </label><br/>
	<%= t.text_field :name %><br/>

	
	<label>Driver </label><br/>
	<% Driver.all.each do |driver| %>
        <%= check_box_tag "vehicle[driver_ids][]", driver.id, @vehicle.driver_ids.include?(driver.id), :id => dom_id(driver) %>
        <%= label_tag dom_id(driver), driver.name, :class => "uniform" %><br/>
    <% end %>

	<label>Vehicle Type </label><br/>
	<%= t.select :vehicle_type,["Sedan","Suv","Minivan"],prompt:"select_vehicle"%><br/><br/>
	



	<label>Registration Number</label><br/>
	<%= t.text_field :reg_no %><br/>

	<label>Chassis Number: </label><br/>
	<%= t.text_field :chassis_no %><br/>

	<label>Engine Number: </label><br/>
	<%= t.text_field :engine_no %><br/><br/>
	
	<label>RC Expiration Date</label><br/>
	<%= t.date_select :rc_expiration_date,order:[:day,:month,:year],include_blank:true,start_year:Date.today.year %><br/>
	
	<label>RC Image </label><br/>
	<%= t.file_field :rc_image %><br/>
	
	<label>Insurance Expiration Date</label><br/>
	<%= t.date_select :insurance_expiration_date,order:[:day,:month,:year],include_blank:true,start_year:Date.today.year %><br/>
	
	<label>Insurance Image </label><br/>
	<%= t.file_field :insurance_image %><br/>

	<label>Emission Expiration Date</label><br/>
	<%= t.date_select :emission_expiration_date,order:[:day,:month,:year],include_blank:true,start_year:Date.today.year %><br/>
	
	<label> Image </label><br/>
	<%= t.file_field :emission_image %><br/>

	<input type="submit" class="btn btn-info" value="Create Vehicle">
	
<% end -%>

