<h3>Add New Route</h3>

<%= form_for @route do |f| %>


   <% if @route.errors.any? %>
   <ul>
   	   <% for msg in @route.errors.full_messages %>
   	   <li><%= msg %></li>
   	   <% end %>
   </ul>
   <% end %>

	<label>Name:</label><br/>
	<%= f.text_field :name %><br/>


	<label>Latitude:</label><br/>
	<%= f.text_field :latitude %><br/>

	<label>Longitude:</label><br/>
	<%= f.text_field :longitude %><br/>


     <label>Possition:</label><br/>
	<%= f.text_field :possition %><br/><br/>

	<%= f.submit %>

	<% end %>
