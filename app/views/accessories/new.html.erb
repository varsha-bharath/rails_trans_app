
<h3>Accessoires </h3>

<%= form_for @accessory, html: { multipart: true }  do |t| %>
	<% if @accessory.errors.any? %>
		<h3>These errors prohibited this <%= @accessory.class %> from being saved</h3>
		<ul>
		<% for msg in @accessory.errors.full_messages %>
			<li><%= msg %></li>
			<% end -%>
		</ul>
	<% end -%>

	<label>Vehicle:</label><br/>
	<%= t.collection_select :vehicle_id,Vehicle.all,:id,:reg_no,prompt: "Select_Vehicle" %><br/>

	<label>Name of Accessory</label><br/>
	<%= t.text_field :name %><br/>

	<label>Cost </label><br/>
	<%= t.text_field :cost %><br/>

	<label>Model</label></br>
	<%= t.text_field :model %><br/><br/>
	
	<label>Serial No</label></br>
	<%= t.text_field :serial_no %><br/><br/>
	
	<label>Invoice Image</label></br>
	<%= t.file_field :invoice_image %><br/><br/>

	<input type="submit" class="btn btn-info" value="Create Accessory">
	
<% end -%>
