<h4>Edit Vehicle</h4>
	<%= form_for @vehicle do |f| %>
	<% if @vehicle.errors.any? %>
			<h3>These errors prohibited this <%= @vehicle.class %> from being saved</h3>
		<ul>
		<% for msg in @vehicle.errors.full_messages %>
			<li><%= msg %></li>
			<% end -%>
		</ul>
	<% end -%>

	<label>Name:</label><br/>
	<%= f.text_field :name %><br/>

	<label>Vehicle Type:</label><br/>
	<%= f.select :vehicle_type,["Sedan","Suv","Minivan"],prompt:"select_vehicle"%><br/>

	<label>Registration Number</label></br>
	<%= f.text_field :reg_no %><br/>

	<label>Chassis Number: </label></br>
	<%= f.text_field :chassis_no %><br/>

	<label>Engine Number: </label></br>
	<%= f.text_field :engine_no %><br/>

	<%= f.submit "Submit"%>

<% end -%>