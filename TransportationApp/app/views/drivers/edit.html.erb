<h3>Edit Driver</h3>

<%= form_for @driver do |f| %>

 <% if @driver.errors.any? %>
   <ul>
   	   <% for msg in @driver.errors.full_messages %>
   	   <li><%= msg %></li>
   	   <% end %>
   </ul>
   <% end %>

	<label>Name:</label>
	<%= f.text_field :name %><br/>

	<label>Age</label>
	<%= f.text_field :age %><br/>


	<label>Blood_Group</label>
	<%= f.select :blood_group, ["A+", "A-", "B+","B-", "O+", "O-", "AB+", "AB-"] %><br/>


	<label>Mobile No:</label>
	91- <%= f.text_field :mobile_no %><br/>


	<label>Emergency Contact:</label>
	<%= f.text_field :emergency_contact %><br/>


	<label>DL_Expiration:</label>
	<%= f.date_select :dl_expiration, order: [:day, :month, :year],include_blank: true %><br/>


	<label>Back Ground Check:</label>
	<%= f.select :back_ground_check, ["true", "false"], prompt: "Select" %><br/>

	<%= f.submit %>

<% end %>
